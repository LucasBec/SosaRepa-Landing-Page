---
/**
 * @file index.astro
 * @description Pagin
 * @author LucasBec
 * @version 1.0.0
 */

// Import required components and layouts
import Layout from '../layouts/Layout.astro';
import ParallaxBackground from '../components/ParallaxBackground.astro';
import ScrollToTop from '../components/ScrollToTop.astro';
import Banner from '../components/Banner.astro';
import SocialCard from '../components/socialCard.astro';

const services = ['Cambios de módulo', 'Cambio de batería', 'Pin de carga', 'Venta de accesorios'];
---

<!-- Main Layout with SEO title -->
<Layout
  title="SosaRepa - Servicio técnico"
  description="Servicio técnico y venta de celulares, accesorios y más."
  image="/preview.jpg"
>
  <!-- Background Components -->
  <ParallaxBackground />
  <ScrollToTop />

  <!-- Main Content -->
  <main class="font-lato relative">
    <Banner />
    <div class="container mx-auto px-4 py-16">
      <div
        class="grid grid-cols-1 md:grid-cols-[2fr_1fr] gap-8 [grid-template-areas:'box1'_'box3'_'box2'] md:[grid-template-areas:'box1_box3'_'box2_box3']"
      >
        <!-- Box 1: Headers -->
        <div
          class="[grid-area:box1] animate-slide-up bg-gradient-to-br from-blue-500 to-purple-600 dark:from-blue-600 dark:to-purple-800 p-8 rounded-lg relative overflow-hidden shadow-xl"
        >
          <!-- Decorative elements -->
          <div
            class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full transform translate-x-1/2 -translate-y-1/2"
          >
          </div>
          <div class="absolute -bottom-8 -left-8 w-48 h-48 bg-white/10 rounded-full"></div>
          <div class="relative z-10">
            <h1 class="text-3xl md:text-4xl font-bold text-white mb-4 font-poppins">
              Servicio técnico y venta de celulares
            </h1>
            <h2 class="text-xl md:text-2xl text-gray-100 font-poppins">
              Los mejores precios de Santa Fe.
            </h2>
          </div>
        </div>

        <!-- Box 2: Services -->
        <div
          id="services"
          class="[grid-area:box2] bg-gradient-to-br from-blue-500 to-purple-600 dark:from-blue-600 dark:to-purple-800 rounded-lg p-8 animate-slide-up relative overflow-hidden shadow-xl"
        >
          <!-- Decorative circles -->
          <div
            class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full transform translate-x-1/2 -translate-y-1/2"
          >
          </div>
          <div
            class="absolute bottom-0 left-0 w-48 h-48 bg-white/10 rounded-full transform -translate-x-1/2 translate-y-1/2"
          >
          </div>

          <h2 class="text-3xl font-bold mb-8 text-center text-white font-poppins relative z-10">
            Nuestros Servicios
          </h2>
          <div
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-4 sm:gap-6 lg:gap-8 relative z-10"
          >
            {
              services.map((service) => (
                <div class="bg-white/10 backdrop-blur-sm p-4 sm:p-6 lg:p-8 rounded-lg shadow-lg hover:shadow-xl transition-all hover:scale-105 hover:bg-white/20 group">
                  <h3 class="text-lg sm:text-xl lg:text-2xl font-semibold mb-4 text-white font-poppins">
                    {service}
                  </h3>
                  <p class="text-sm sm:text-base lg:text-lg text-gray-100 group-hover:text-white transition-colors">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor
                    incididunt ut labore et dolore magna aliqua.
                  </p>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Box 3: WhatsApp -->
        <div
          class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm rounded-lg shadow-xl p-8 animate-fade-in"
        >
          <!-- WhatsApp Section -->
          <div class="pt-6 border-t border-gray-200 dark:border-gray-700">
            <h3 class="text-2xl font-semibold mb-6 dark:text-white flex items-center font-poppins">
              <svg class="w-8 h-8 mr-3 text-green-500" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"
                ></path>
              </svg>
              Envianos tu consulta
            </h3>
            <p class="text-gray-600 dark:text-gray-400 mb-6">
              Dejanos tu consulta. ¡Nos contactaremos lo antes posible!
            </p>
            <a
              href="https://wa.me/3426495280"
              target="_blank"
              rel="noopener noreferrer"
              class="block w-full bg-green-500 hover:bg-green-600 text-white py-3 px-4 rounded-md transition-colors font-medium text-center flex items-center justify-center"
            >
              <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"
                ></path>
              </svg>
              Empezar un chat
            </a>
          </div>
        </div>

        <SocialCard />
      </div>
    </div>
  </main>
</Layout>
